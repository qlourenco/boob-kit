<div class="forum-page ">

  <div class="top-forum mb-5 p-5">
    <%= simple_form_for(@forum) do |f| %>
      <div class="form-row">
        <div class="col-md-4">
          <%= f.input :pseudo, class: "form-group" %>
        </div>
        <div class="col-md-6"></div>
        <div class="col-md-2">
          <%= f.input :age, class: "form-group" %>
        </div>
      </div>
      <%= f.input :commentaire, :input_html => {:style=> 'height: 160px'}, class: "form-group" %>
      <%= f.submit "Ajouter", class: "sub-btn btn btn-primary"%>
    <% end %>
  </div>

  <div class="commentaire">
    <% @forums.reverse_each do |forum| %>
      <div class="simple-com m-5">
        <%= forum.pseudo.capitalize %>
        <%= forum.age %>
        <div class="com-pad">
          <%= forum.commentaire.capitalize %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
